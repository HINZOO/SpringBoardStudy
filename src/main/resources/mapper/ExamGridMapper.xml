<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.acorn.springboardstudy.mapper.ExamGridMapper">
    <resultMap id="ExamMap" type="ExamGridDto">
        <id column="e_id" property="eId"/>
        <result column="u_id" property="uId"/>
        <result column="name" property="name"/>
        <result column="nation" property="nation"/>
        <result column="city" property="city"/>
        <result column="to_time" property="toTime"/>
        <result column="from_time" property="fromTime"/>
        <result column="gender" property="gender"/>
    </resultMap>
    <insert id="insertOne" useGeneratedKeys="true" keyProperty="eId" parameterType="ExamGridDto">
        INSERT INTO exam_grid (u_id,name, nation, city, to_time, from_time, gender)VALUES(#{uId},#{name},#{nation},#{city},#{toTime},#{fromTime},#{gender})
    </insert>
    <delete id="deleteOne">
        DELETE FROM exam_grid WHERE e_id=#{eId}
    </delete>
    <select id="findAll" resultMap="ExamMap" parameterType="ExamPageDto">
        SELECT * FROM exam_grid
        <if test="name!=null">
            WHERE ${name} LIKE CONCAT('%',#{name.value},'%')
        </if>
    </select>
    <select id="findByEId"  resultMap="ExamMap">
        SELECT * FROM exam_grid WHERE e_id=#{eId}
    </select>
</mapper>
