<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.acorn.springboardstudy.mapper.ExamGridMapper">
    <resultMap id="ExamMap" type="ExamGridDto">
        <id column="e_id" property="eId"/>
        <result column="u_id" property="uId"/>
        <result column="name" property="name"/>
        <result column="nation" property="nation"/>
        <result column="city" property="city"/>
        <result column="to_time" property="toTime"/>
        <result column="from_time" property="fromTime"/>
        <result column="gender" property="gender"/>
    </resultMap>
    <insert id="insertOne" useGeneratedKeys="true" keyProperty="eId" parameterType="ExamGridDto">
        INSERT INTO exam_grid (u_id,name, nation, city, to_time, from_time, gender)VALUES(#{uId},#{name},#{nation},#{city},#{toTime},#{fromTime},#{gender})
    </insert>
    <delete id="deleteOne">
        DELETE FROM exam_grid WHERE e_id=#{eId}
    </delete>
    <select id="findAll" resultMap="ExamMap">
        SELECT * FROM exam_grid
        WHERE 1=1
        <if test="name != null and !name.isEmpty()">
            AND name LIKE CONCAT('%',#{name},'%')
        </if>
        <if test="uId != null and !uId.isEmpty()">
            AND u_id LIKE CONCAT('%',#{uId},'%')
        </if>
        <if test="nation != null and !nation.isEmpty()">
            AND nation=#{nation}
        </if>
        <if test="city != null and !city.isEmpty()">
            AND city=#{city}
        </if>
        <if test="gender != null and !gender.isEmpty()">
            AND gender=#{gender}
        </if>
        <if test="toTime != null and !toTime.isEmpty()">
            AND (to_time>=#{toTime} AND #{fromTime}>=from_time)
        </if>
    </select>
    <select id="findByEId"  resultMap="ExamMap">
        SELECT * FROM exam_grid WHERE e_id=#{eId}
    </select>
</mapper>
